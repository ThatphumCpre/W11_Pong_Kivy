<PongGame>:
    canvas:
        Rectangle:  #วาดสี่เหลี่ยม
            pos: self.center_x - 5, 0   #กำหนดตำแหน่งไปยังจุดกึ่งกลาง
            size: 10, self.height  #กำหนดขนาดยาวและความกว้างเท่าความส

    Label:
        font_size: 70  #กำหนดขนาดเป็น 70
        center_x: root.width / 4  #กำหนดตำแหน่งเป็นคว้างกว้างส่วนสี่
        top: root.top - 50  #กำหนดตำแหน่ง top ลงมา 50 px
        text: "0"   #กำหนดข้อความเป็น 0

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
